<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tagView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imagem_item"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:src="@drawable/jet_ski"
                android:visibility="gone" />

            <Button
                android:id="@+id/selecionar_imagem_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Selecionar imagem" />


            <br.edu.ifam.saf.view.FieldView
                android:id="@+id/nome_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:border="false"
                app:hint="Nome do Item"
                app:icon="@drawable/ic_directions_boat_black_24dp"
                app:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/field_view_background"
                android:gravity="center_vertical"
                android:padding="8dp">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_local_offer_black_24dp"
                    tools:ignore="ContentDescription" />

                <Spinner
                    android:id="@+id/categoria_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <br.edu.ifam.saf.view.FieldView
                android:id="@+id/marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Marca"
                app:icon="@drawable/ic_more_black_24dp"
                app:inputType="text" />

            <br.edu.ifam.saf.view.FieldView
                android:id="@+id/modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Modelo"
                app:icon="@drawable/ic_filter_frames_black_24dp"
                app:inputType="text" />

            <br.edu.ifam.saf.view.FieldView
                android:id="@+id/preco_hore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Preço por Hora"
                app:icon="@drawable/ic_attach_money_black_24dp"
                app:inputType="number" />

            <br.edu.ifam.saf.view.FieldView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Descrição"
                app:icon="@drawable/ic_description_black_24dp"
                app:inputType="text" />

            <Button
                android:id="@+id/salvar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Salvar" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>